<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="COM_DEBUGGER.MainWindow"
        Title="COM DEBUGGER" Margin="1,0,0,0" MinWidth="650" MinHeight="500" Width="800" Height="650" WindowStartupLocation="CenterScreen" Icon="logo.ico">
    <Grid x:Name="BigGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="591*"/>
        </Grid.RowDefinitions>
        <ToolBarPanel x:Name="ToolBar" Margin="0" Grid.ColumnSpan="3" Background="#FF3F3F46">
            <Menu HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="White" VerticalAlignment="Center" Padding="0,3,0,0" FontSize="14">
                <MenuItem Header="File" Background="{x:Null}" Foreground="White">
                    <MenuItem Header="Exit" Background="#FF2D2D30" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Settings" Foreground="White">
                    <MenuItem Background="#FF2D2D30" Header="Options" Click="Options_Click"/>
                </MenuItem>
                <MenuItem Header="Help"/>
                <MenuItem Header="About" Click="About_Click"/>
            </Menu>
        </ToolBarPanel>
        <GroupBox x:Name="Group1" Header="Serial-1" Margin="5,0,0,5" Grid.Row="1" BorderBrush="White" Foreground="{x:Null}" Background="#FF61A7D6">
            <Grid x:Name="GroupGrid2" Margin="0" Background="#FF3896D4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="290*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="120*"/>
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="serial1" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="textbox1" TextWrapping="Wrap" MinWidth="200" MinHeight="200" Padding="5" ScrollViewer.VerticalScrollBarVisibility="Hidden" Cursor="IBeam" IsReadOnly="True" AutoWordSelection="True" Background="#FFE7F1F5" BorderBrush="{x:Null}">
                        <TextBox.ContextMenu>
                            <ContextMenu x:Name="contextmenu1">
                                <MenuItem x:Name="Clear1" Header="Clear All" Click="Clear_Serial1_Click"/>
                                <MenuItem x:Name="Clear_All1" Header="Clear Left and Right" Click="Clear_All_Click"/>
                                <MenuItem x:Name="Copy1" Header="Copy" Click="Copy_Click"/>
                                <MenuItem x:Name="SelectAll1" Header="Select All" Click="SelectAll_Click"/>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>
                </ScrollViewer>
                <TextBox x:Name="sendbox1" Margin="0" TextWrapping="Wrap" UndoLimit="20" KeyDown="sendbox1_KeyDown" FontSize="14.667" VerticalContentAlignment="Center" FontWeight="Bold" FontFamily="Microsoft JhengHei UI" HorizontalScrollBarVisibility="Auto" Grid.Row="1"/>
                <Grid x:Name="ContolPanel" Margin="0" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="185*"/>
                        <ColumnDefinition Width="118*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="79*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel x:Name="WrapPorts1" Margin="10,3,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="132">
                        <Label Content="Ports  " HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="62" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="White" FontWeight="Bold"/>
                        <ComboBox x:Name="comboBox_Ports1" Height="22" VerticalAlignment="Center" SelectionChanged="Ports_SelectionChanged" Width="70" Background="White" HorizontalAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel x:Name="WrapBaudrate1" Margin="10,3,0,3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30" Width="132">
                        <Label Content="Baudrate" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="62" Foreground="#FFFBFBFB" FontWeight="Bold"/>
                        <ComboBox x:Name="comboBox_BaudRate1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="22" SelectionChanged="comboBox_BaudRate_SelectionChanged" Background="White"/>
                    </WrapPanel>
                    <Button x:Name="Op_Button1" Content="Open" Width="70" Click="Button_Open1" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,11,20,11" Background="White" FontWeight="Bold" Grid.Column="1" Grid.RowSpan="2" />
                    <CheckBox x:Name="check1" Content="Send New line" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.Column="1" Foreground="White" IsChecked="True" Click="SendNewLineChecked" Background="{x:Null}" BorderBrush="#FF2942DC"/>
                    <Expander x:Name="Advanced1" Header="Advanced" Margin="0,6" VerticalContentAlignment="Center" Foreground="White" Grid.Row="2" Grid.ColumnSpan="2" Height="70" HorizontalAlignment="Left">
                        <Grid HorizontalAlignment="Left" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200*"/>
                                <ColumnDefinition Width="200*"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LabelStopBits1" Content="DataBits" HorizontalAlignment="Left" Margin="10,0,0,0" Padding="0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            <ComboBox x:Name="comboBox_Databits1" Margin="60,0,0,0" Width="70" HorizontalAlignment="Left" Padding="0" Height="18" VerticalAlignment="Center" SelectionChanged="comboBox_Databits_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
                            <Label x:Name="label" Content="StopBits" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalContentAlignment="Center" Padding="0" HorizontalContentAlignment="Center" Width="50" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Center" Grid.Column="1" Foreground="White"/>
                            <ComboBox x:Name="comboBox_StopBits1" Margin="70,0,0,0" Width="70" HorizontalAlignment="Left" Height="18" VerticalAlignment="Center" Grid.Column="1" SelectionChanged="comboBox_StopBits_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Background="White"/>
                            <Label x:Name="label1" Content="Parity" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Width="50" Foreground="White"/>
                            <ComboBox x:Name="comboBox_Parity1" Margin="60,0,0,0" HorizontalAlignment="Left" Width="70" Padding="0" Height="18" VerticalAlignment="Center" Grid.Row="1" SelectionChanged="comboBox_Parity_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
                            <Label x:Name="label2" Content="HandShake" HorizontalAlignment="Left" Margin="7,5,0,4" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Foreground="#FFFFF6F6"/>
                            <ComboBox x:Name="comboBox_HandShake1" Margin="70,0,0,0" HorizontalAlignment="Left" Width="70" Padding="0" Height="18" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" SelectionChanged="comboBox_HandShake_Selected" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        </Grid>
                    </Expander>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="Group2" Header="Serial-2" Margin="5,0,0,5" Grid.Row="1" Grid.Column="1" BorderBrush="#FFF7F7F7" Background="#FF61A7D6" Foreground="{x:Null}">
            <Grid x:Name="GroupGrid1" Margin="0" Background="#FF3896D4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="290*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="120*"/>
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="serial2" Margin="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="textbox2" TextWrapping="Wrap" MinWidth="200" MinHeight="200"  Background="#FFE7F1F5" Padding="5" ScrollViewer.VerticalScrollBarVisibility="Hidden" Cursor="IBeam" IsReadOnly="True" AutoWordSelection="True">
                        <TextBox.ContextMenu>
                            <ContextMenu x:Name="contextmenu2">
                                <MenuItem x:Name="Clear2" Header="Clear All" Click="Clear_Serial1_Click"/>
                                <MenuItem x:Name="Clear_All12" Header="Clear Left and Right" Click="Clear_All_Click"/>
                                <MenuItem x:Name="Copy2" Header="Copy" Click="Copy_Click"/>
                                <MenuItem x:Name="SelectAll2" Header="Select All" Click="SelectAll_Click"/>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>
                </ScrollViewer>
                <TextBox x:Name="sendbox2" Margin="0" TextWrapping="Wrap" UndoLimit="20" KeyDown="sendbox1_KeyDown" FontSize="14.667" VerticalContentAlignment="Center" FontWeight="Bold" FontFamily="Microsoft JhengHei UI" HorizontalScrollBarVisibility="Auto" Grid.Row="1"/>
                <Grid x:Name="ContolPanel_Copy" Margin="0,0,-1,0" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="185*"/>
                        <ColumnDefinition Width="118*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="79*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel x:Name="WrapPorts2" Margin="10,3,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="132">
                        <Label Content="Ports  " HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="62" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Foreground="White" FontWeight="Bold"/>
                        <ComboBox x:Name="comboBox_Ports2" Height="22" VerticalAlignment="Center" SelectionChanged="Ports_SelectionChanged" Width="70" Background="White" HorizontalAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel x:Name="WrapBaudrate2" Margin="10,3,0,3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30" Width="132">
                        <Label Content="Baudrate" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="62" Foreground="#FFFBFBFB" FontWeight="Bold"/>
                        <ComboBox x:Name="comboBox_BaudRate2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Height="22" SelectionChanged="comboBox_BaudRate_SelectionChanged" Background="White"/>
                    </WrapPanel>
                    <Button x:Name="Op_Button2" Content="Open" Width="70" Click="Button_Open1" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,11,20,11" Background="White" FontWeight="Bold" Grid.Column="1" Grid.RowSpan="2" />
                    <CheckBox x:Name="check2" Content="Send New line" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.Column="1" Foreground="White" IsChecked="True" Click="SendNewLineChecked" BorderBrush="#FF2942DC" Background="{x:Null}"/>
                    <Expander x:Name="Advanced2" Header="Advanced" Margin="0,6" VerticalContentAlignment="Center" Foreground="White" Grid.Row="2" Grid.ColumnSpan="2" Height="70" HorizontalAlignment="Left">
                        <Grid HorizontalAlignment="Left" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200*"/>
                                <ColumnDefinition Width="200*"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LabelStopBits2" Content="DataBits" HorizontalAlignment="Left" Margin="10,0,0,0" Padding="0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            <ComboBox x:Name="comboBox_Databits2" Margin="60,0,0,0" Width="70" HorizontalAlignment="Left" Padding="0" Height="18" VerticalAlignment="Center" SelectionChanged="comboBox_Databits_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
                            <Label x:Name="label3" Content="StopBits" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalContentAlignment="Center" Padding="0" HorizontalContentAlignment="Center" Width="50" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Center" Grid.Column="1" Foreground="White"/>
                            <ComboBox x:Name="comboBox_StopBits2" Margin="70,0,0,0" Width="70" HorizontalAlignment="Left" Height="18" VerticalAlignment="Center" Grid.Column="1" SelectionChanged="comboBox_StopBits_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Background="White"/>
                            <Label x:Name="label4" Content="Parity" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Width="50" Foreground="White"/>
                            <ComboBox x:Name="comboBox_Parity2" Margin="60,0,0,0" HorizontalAlignment="Left" Width="70" Padding="0" Height="18" VerticalAlignment="Center" Grid.Row="1" SelectionChanged="comboBox_Parity_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
                            <Label x:Name="label5" Content="HandShake" HorizontalAlignment="Left" Margin="7,5,0,4" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Foreground="#FFFFF6F6"/>
                            <ComboBox x:Name="comboBox_HandShake2" Margin="70,0,0,0" HorizontalAlignment="Left" Width="70" Padding="0" Height="18" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" SelectionChanged="comboBox_HandShake_Selected" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="White"/>
                        </Grid>
                    </Expander>
                </Grid>
            </Grid>
        </GroupBox>
        <Grid x:Name="Group3" Grid.Column="2" Margin="5,5,5,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="414*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="165*"/>
            </Grid.RowDefinitions>
            <Rectangle Stroke="#FF0C87D8" Margin="0,0,0,10" Grid.Row="3"/>
            <Grid Margin="0,0,0,10" Grid.Row="3" Background="#FF3896D4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="138*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Grid Margin="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="61*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="RefreshButton" Content="refesh" ClickMode="Press" BorderBrush="#FF87878C" Margin="0" RenderTransformOrigin="1.132,22.288" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White"  Click="RefreshButton_Click_1" Padding="2" Grid.Column="1" FontSize="11"/>
                    <Label Content="Ports List" HorizontalAlignment="Left" Width="65" Foreground="White" Margin="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11" Padding="2" VerticalAlignment="Center"/>
                </Grid>
                <ListBox x:Name="PortListBox" Margin="0" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="{x:Null}"/>
            </Grid>
            <TabControl x:Name="CommandSource" AllowDrop="True" Margin="0" BorderBrush="#FF3896D4" Background="{x:Null}" Grid.Row="1" Foreground="{x:Null}">
                <TabItem Margin="0" BorderBrush="#FF007ACC" Header="Scripts" Background="#FF3896D4" RenderTransformOrigin="0.5,0.5" FontSize="14">
                    <TabItem.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" ScaleX="1"/>
                            <SkewTransform AngleY="0" AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TabItem.RenderTransform>
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="317*"/>
                            <RowDefinition Height="39*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="66*"/>
                                <ColumnDefinition Width="67*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="RUNButton" Content="RUN" Margin="0" Click="RUNButton_Click" Background="{x:Null}" BorderBrush="#FF0C87D8" Padding="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" BorderThickness="2"/>
                            <Button x:Name="ADDButton" Content="ADD" Margin="0" Click="ADDButton_Click" Background="{x:Null}" BorderBrush="#FF0C87D8" Padding="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                        </Grid>
                        <ListBox x:Name="ScriptsList" Background="White" Foreground="Black" BorderBrush="{x:Null}" Margin="0" MouseDoubleClick="ScriptsList_MouseDoubleClick" AllowDrop="True" Drop="ListBox_Drop"/>
                    </Grid>
                </TabItem>
                <TabItem Header=" CPLD" BorderBrush="#FF3896D4" Margin="0" Background="#FF3896D4" FontSize="14">
                    <Grid x:Name="CPLD" >
                        <ListBox x:Name="CPLDList" Margin="0" MouseDoubleClick="CommandList_MouseDoubleClick" BorderBrush="{x:Null}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="KABS" Margin="0" Background="#FF3896D4" BorderBrush="#FF3896D4" FontSize="14">
                    <Grid>
                        <ListBox x:Name="KABSList" Margin="0" FontSize="11" MouseDoubleClick="CommandList_MouseDoubleClick"/>
                    </Grid>

                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
