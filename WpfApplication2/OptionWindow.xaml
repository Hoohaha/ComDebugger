<Window x:Class="COM_DEBUGGER.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF3E3E42">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="6" Margin="0,0,-0.4,0.8">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="56*"/>
            </Grid.RowDefinitions>
            <WrapPanel Margin="0,9.6,0,2.6" VerticalAlignment="Center" Grid.Row="1">
                <Label x:Name="Label1" Content="Python Path" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Height="16" Width="127" Foreground="White"/>
                <TextBox x:Name="path1" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" LostFocus="Path_Judge_Event" Width="345"/>
            </WrapPanel>
            <TextBlock x:Name="Notice1" HorizontalAlignment="Left" Margin="132,0,0,44" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="338" Height="21" Grid.RowSpan="2" />
        </Grid>
        <Button x:Name="Save_button" Content="Save" Grid.Column="1" Margin="179.8,0,0,20" Grid.Row="4" VerticalAlignment="Bottom" Click="Save_button_Click" Height="30" Grid.ColumnSpan="2"/>
        <Button x:Name="Cancle_button" Content="Cancle" Grid.Column="3" Margin="26.2,0,20.6,20" Grid.Row="4" VerticalAlignment="Bottom" Click="Cancle_button_Click" Height="30" Grid.ColumnSpan="3"/>
        <Grid Grid.ColumnSpan="6" Grid.Row="1" VerticalAlignment="Center" Height="58" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="56*"/>
            </Grid.RowDefinitions>
            <WrapPanel Margin="0" VerticalAlignment="Center" Grid.Row="1">
                <Label x:Name="Label2" Content="Python Lib 1" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Width="127" Foreground="White"/>
                <TextBox x:Name="path2" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" LostFocus="Path_Judge_Event" Width="345"/>
            </WrapPanel>
            <TextBlock x:Name="Notice2" HorizontalAlignment="Left" Margin="132,0,0,30" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="338" Height="26" Grid.RowSpan="2" />
        </Grid>
        <Grid Grid.ColumnSpan="6" Grid.Row="2" VerticalAlignment="Center" Height="58" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="56*"/>
            </Grid.RowDefinitions>
            <WrapPanel Margin="0" VerticalAlignment="Center" Grid.Row="1">
                <Label x:Name="Label3" Content="Python Lib 2" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Height="16" Width="127" Foreground="White"/>
                <TextBox x:Name="path3" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" LostFocus="Path_Judge_Event" Width="345"/>
            </WrapPanel>
            <TextBlock x:Name="Notice3" HorizontalAlignment="Left" Margin="132,0,0,30" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="338" Height="26" Grid.RowSpan="2" />
        </Grid>
        <Button x:Name="button" Content="Sync" Grid.Column="1" HorizontalAlignment="Center" Margin="0" Grid.Row="3" VerticalAlignment="Center" Width="58" Height="37"/>
        <Label x:Name="label" Content="Command List Sync" HorizontalAlignment="Center" Margin="0" Grid.Row="3" VerticalAlignment="Center" Foreground="White"/>

    </Grid>
</Window>
